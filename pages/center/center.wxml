<!--pages/center/center.wxml-->
<view class="userInfo">
<image src="{{userInfo.avatarUrl}}" bindtap="handleTap"></image>
<view>{{userInfo.nickName}}</view>
</view>

<mp-cells >
    <mp-cell>
      <mp-icon slot="icon" icon="me" type="field" color="#14c145" size="{{30}}"></mp-icon>
        完善信息
        <mp-icon slot="footer" icon="arrow" type="field" color="#14c145" size="{{15}}"></mp-icon>
    </mp-cell>
    <mp-cell>
        个性设置
        <mp-icon slot="icon" icon="like" type="field" color="#14c145" size="{{30}}"></mp-icon>
        <mp-icon slot="footer" icon="arrow" type="field" color="#14c145" size="{{15}}"></mp-icon>
    </mp-cell>
</mp-cells>
